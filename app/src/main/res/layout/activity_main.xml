<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/txtcategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Question"
        android:textSize="30sp"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold|italic"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/txtscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="score: 0"
            android:textSize="22sp"
            android:textColor="#000000"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_weight="25"
            android:layout_margin="2dp"
            android:textAlignment="center"

            />
        <TextView
            android:id="@+id/txtTotalQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="1/10"
            android:padding="9dp"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_weight="50"
            android:background="@drawable/gradptn"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/txttimer"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:layout_weight="25"
            android:textSize="22sp"
            android:textColor="#000000"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textAlignment="center"
            />


    </LinearLayout>


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    >
    <TextView
        android:id="@+id/txtquestioncontainer"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/gradptn2"
        android:text="how does pci target controller implemented ?"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold|italic"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radiogroup"
            >

            <RadioButton
                android:id="@+id/radiobutn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="soln1"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:button="@null"
                android:paddingLeft="15dp"
                android:textAlignment="textStart"
                android:freezesText="true"
                android:background="@drawable/defaultsoln"
                android:textColor="#FFF4F4"
                />
            <RadioButton
                android:id="@+id/radiobutn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="soln2"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:button="@null"
                android:freezesText="true"
                android:paddingLeft="15dp"
                android:textAlignment="textStart"
                android:background="@drawable/defaultsoln"
                android:textColor="#FFFFFF"

                />
            <RadioButton
                android:padding="10dp"
                android:id="@+id/radiobutn3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="soln3"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:button="@null"
                android:freezesText="true"
                android:paddingLeft="15dp"
                android:textAlignment="textStart"
                android:background="@drawable/defaultsoln"
                android:textColor="#FFFFFF"

                />
            <RadioButton
                android:id="@+id/radiobutn4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="soln4"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:button="@null"
                android:freezesText="true"
                android:paddingLeft="15dp"
                android:textAlignment="textStart"
                android:background="@drawable/defaultsoln"
                android:textColor="#FFEEEE"
                />
        </RadioGroup>

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="15dp"
    android:gravity="center"
    >
    <Button
        android:id="@+id/nextbtn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:text="Next"
        android:padding="10dp"
        android:textAllCaps="false"
        android:textStyle="italic|bold"
        android:textSize="26sp"
        android:textColor="@android:color/black"
        android:background="@drawable/defaultoptn"
        />
</LinearLayout>
</LinearLayout>
